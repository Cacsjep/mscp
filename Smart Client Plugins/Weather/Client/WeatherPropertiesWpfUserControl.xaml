<external:PropertiesWpfUserControl
    xmlns:external="clr-namespace:VideoOS.Platform.Client;assembly=VideoOS.Platform"
    x:Class="Weather.Client.WeatherPropertiesWpfUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    d:DesignHeight="340"
    d:DesignWidth="250">
    <Grid Margin="5">
        <GroupBox Header="Weather">
            <StackPanel Margin="5">
                <Label Content="Search Location:" />
                <DockPanel>
                    <Button x:Name="searchButton"
                            Content="Search"
                            DockPanel.Dock="Right"
                            Padding="8,4"
                            Margin="4,0,0,0"
                            Click="SearchButton_Click" />
                    <TextBox x:Name="searchTextBox" Padding="4" />
                </DockPanel>
                <ListBox x:Name="resultsListBox"
                         Height="80"
                         Margin="0,4,0,0"
                         Visibility="Collapsed"
                         SelectionChanged="ResultsListBox_SelectionChanged" />

                <Separator Margin="0,8,0,8" />

                <Label Content="Location Name:" />
                <TextBox x:Name="locationNameTextBox" Padding="4" />
                <Label Content="Latitude:" Margin="0,8,0,0" />
                <TextBox x:Name="latitudeTextBox" Padding="4" />
                <Label Content="Longitude:" Margin="0,8,0,0" />
                <TextBox x:Name="longitudeTextBox" Padding="4" />

                <Separator Margin="0,8,0,8" />

                <Label Content="Refresh Interval (minutes):" />
                <TextBox x:Name="refreshTextBox" Padding="4" />
                <Label Content="Temperature Unit:" Margin="0,8,0,0" />
                <ComboBox x:Name="unitComboBox" Padding="4">
                    <ComboBoxItem Content="Celsius" Tag="celsius" />
                    <ComboBoxItem Content="Fahrenheit" Tag="fahrenheit" />
                </ComboBox>
            </StackPanel>
        </GroupBox>
    </Grid>
</external:PropertiesWpfUserControl>
